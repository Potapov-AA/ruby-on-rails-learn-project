.image
	.row
		.col-md-3
			.left_controls
				.select_theme
					= render 'work/button_theme_select', locale: @current_locale
					-# = render 'work/choose_theme_from_arr', locale: @current_locale
			%br

			.modal_list_results
				= render 'work/button_list_results'
			%br

		.col-md-9
			.image_display
				.row.image
					.col-md-12
						%h2.work_title.up-theme{:title => ".theme_name"}
							#{@selected_theme}

					.col-md-12
						%h2.work_image_title.up{:title => "Image file name"} 
							#{@selected_image_name}

					.col-md-1
						.img-left-side
							%h3{:title => "list to previous image"}
								%i.fa.fa-chevron-circle-left.strong

					.col-md-10
						.img-center{:title => "Default image"}
							%img{:alt => "Default Image", :src => 'assets/pictures/UK.jpeg', :title => "Default image", :style => "width:100%; height:100%;" }
							.image_user_value{:title => "Expert value"}

					.col-md-1
						.img-right-side
							%h3{:title => "list to next image"}
								%i.fa.fa-chevron-circle-right

				.row.diag
				.col-md-12
					.image_diag
						%h2.down{:title => "Value scale"}
							= t(:make_decision)
						.row
							.col-md-2
								%p.center 5%
							.col-md-8
								#slider
									%input#slide{:max => "100", :min => "5", :value => "50", :onchange => "updateSlider(this.value)", :step => "5", :type => "range", :id => "test"}
							.col-md-2
								%p.center 100%

						.row
							.col-md-12
								.center#chosen_value 50

						.row
							.col-md-12
								%button.button__results.save{:title => "Save image diag results"}
									%a{"data-remote" => "true", :format => "js", :href => "#", :title => "Save image diag results"}
										= t(:save_decision)